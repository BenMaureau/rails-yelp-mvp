<div id = "new_review">
  <h1> New Review </h1>

  <%= simple_form_for (@restaurant) do |f| %>
    <div class= 'form-group'>
      <%= f.label :rating, class: "control-label required" %>
      <%= f.text_field :rating, class: "form-control" %>
    </div>
    <div class= 'form-group'>
      <%= f.label :content, class: "control-label required"%>
      <%= f.text_area :content, class: "form-control" %>
    </div>
    <%= f.submit 'Create review', :class => 'btn btn-success' %>

    <div> <%= link_to "Back to list", restaurants_path, class: 'btn btn-primary' %> </div>
  <% end %>
</div>
