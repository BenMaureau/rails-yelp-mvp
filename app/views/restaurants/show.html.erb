<div class = "show-restaurant">
  <h1> <%= @restaurant.name %> - <%= @restaurant.category %> </h1>
  <p> <%= @restaurant.address %> - <%= @restaurant.phone_number%></p>
  <ul class="list-group">
    <% @restaurant.reviews.each do |review| %>
    <li> <%= review.content %> - <%= review.rating %> </li>
    <% end %>
  </ul>

  <h1> New Review </h1>

  <%= simple_form_for [@restaurant, @review] do |f| %>
    <%= f.input :rating %>
    <%= f.input :content %>
    <%= f.submit 'Create review', :class => 'btn btn-success' %>
    <% end %>
  <div>
    <%= link_to "Back to the list", restaurants_path, class: "btn btn-primary"%>
  </div>
</div>
