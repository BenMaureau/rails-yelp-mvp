<div class = "header">
  <h1> Your restaurants - <%= link_to "Add restaurant", new_restaurant_path, class: "btn btn-success" %></h1>

  <ul>
    <% @restaurants.each do |restaurant| %>
    <li>
      <h2> <%= link_to restaurant.name, restaurant_path(restaurant) %> - <%= restaurant.category %></h2>
      <p> <%= restaurant.address %></p>
    </li>
    <% end %>
</ul>
